<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(BlazorWeb.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(BlazorWeb.Layout.MainLayout)">
            <MudContainer Class="mt-8">
                <MudAlert Severity="Severity.Error">Sorry, there's nothing at this address.</MudAlert>
            </MudContainer>
        </LayoutView>
    </NotFound>
</Router>
